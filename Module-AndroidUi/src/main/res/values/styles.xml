<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StyleSimpleNumberPicker">
        <item name="solidColor">@android:color/transparent</item>
        <item name="mainColor">@color/color_text_normal</item>
        <item name="secondColor">@color/color_text_desc</item>
        <item name="selectionDivider">@null</item>
        <item name="selectionDividerHeight">2dp</item>
        <item name="selectionDividersDistance">48dp</item>
    </style>

    <style name="StyleSeekBar">
        <item name="android:splitTrack">false</item>
        <item name="android:thumb">@drawable/au_seekbar_thumb</item>
        <item name="android:paddingStart">@dimen/au_seekbar_thumb_size_half</item>
        <item name="android:paddingEnd">@dimen/au_seekbar_thumb_size_half</item>
        <item name="android:progressDrawable">@drawable/au_seekbar_progress_bg</item>
        <item name="android:duplicateParentState">true</item> <!-- true不要material按压效果-->
    </style>

    <style name="StyleDisabledSeekBar">
        <item name="android:splitTrack">false</item>
        <item name="android:thumb">@drawable/au_seekbar_thumb_disable</item>
        <item name="android:paddingStart">@dimen/au_seekbar_thumb_size_half</item>
        <item name="android:paddingEnd">@dimen/au_seekbar_thumb_size_half</item>
        <item name="android:progressDrawable">@drawable/au_seekbar_progress_bg_disable</item>
        <item name="android:duplicateParentState">true</item> <!-- true不要material按压效果-->
    </style>
</resources>