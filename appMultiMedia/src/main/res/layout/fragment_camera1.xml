<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.au.audiorecordplayer.camx.AspectFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.au.audiorecordplayer.camx.AspectFrameLayout>

    <com.au.module_android.widget.CustomButton
        android:id="@+id/recordBtn"
        style="@style/StyleButtonPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:scaleType="fitCenter"
        android:text="record"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/takePicBtn"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="2dp" />

    <com.au.module_android.widget.CustomButton
        android:id="@+id/takePicBtn"
        android:paddingHorizontal="8dp"
        style="@style/StyleButtonPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:text="picture"
        app:layout_constraintStart_toEndOf="@id/recordBtn"
        android:layout_marginStart="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>