<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_marginHorizontal="@dimen/ui_padding_edge"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.au.module_android.widget.CustomButton
            android:id="@+id/startScan"
            style="@style/StyleButtonPrimary"
            android:text="Start Scan"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.au.module_android.widget.CustomButton
            android:id="@+id/stopScan"
            style="@style/StyleButtonPrimary"
            android:text="Stop Scan"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.au.module_android.widget.CustomFontText
            android:id="@+id/textView"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.au.module_android.widget.CustomButton
            android:id="@+id/classicStartTransferBtn"
            style="@style/StyleButtonPrimary"
            android:text="client开始通信"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.au.module_android.widget.CustomButton
            android:id="@+id/classicStartServerBtn"
            style="@style/StyleButtonPrimary"
            android:text="server准备通信"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.au.module_android.widget.CustomButton
            android:id="@+id/classicCloseTransferBtn"
            style="@style/StyleButtonPrimary"
            android:text="关闭通信"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <com.au.module_android.widget.FlowLayout
            app:flChildSpacing="12dp"
            android:id="@+id/bleConnectHost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.au.module_android.widget.CustomButton
                android:id="@+id/bleConnectBtn"
                style="@style/StyleButtonPrimary"
                android:paddingHorizontal="12dp"
                android:text="BLE连接"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.au.module_android.widget.CustomButton
                android:id="@+id/bleDisConnectBtn"
                style="@style/StyleButtonPrimary"
                android:paddingHorizontal="12dp"
                android:text="BLE断开"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.au.module_android.widget.CustomButton
                android:id="@+id/bleReadBtn"
                style="@style/StyleButtonPrimary"
                android:paddingHorizontal="12dp"
                android:text="BLE读状态"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </com.au.module_android.widget.FlowLayout>
    </LinearLayout>
</ScrollView>