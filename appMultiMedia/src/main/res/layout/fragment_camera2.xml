<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.au.audiorecordplayer.cam2.view.Cam2PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.au.module_android.widget.BgBuildCustomFontText
        android:id="@+id/modeTv"
        style="@style/StyleFontText"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        app:backgroundNormal="#22f0f0f0"
        app:cornerRadius="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="StateDied"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.au.module_android.widget.CustomFontText
        android:id="@+id/timeTv"
        style="@style/StyleFontText"
        android:textColor="#ff0000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/modeTv"/>

    <com.au.module_android.widget.CustomButton
        android:id="@+id/recordBtn"
        style="@style/StyleButtonPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:scaleType="fitCenter"
        android:text="start record"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/takePicBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="2dp" />

    <com.au.module_android.widget.CustomButton
        android:id="@+id/takePicBtn"
        android:paddingHorizontal="8dp"
        style="@style/StyleButtonPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:text="picture"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintStart_toEndOf="@id/recordBtn"
        app:layout_constraintEnd_toStartOf="@id/switchCamBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="2dp" />

    <com.au.module_android.widget.CustomButton
        android:id="@+id/switchCamBtn"
        android:paddingHorizontal="8dp"
        style="@style/StyleButtonPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:text="front-back"
        app:layout_constraintStart_toEndOf="@id/takePicBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="2dp" />

    <com.au.module_android.widget.BgBuildCustomFontText
        android:id="@+id/toastInfo"
        style="@style/StyleFontText"
        app:backgroundNormal="#55f0f0f0"
        app:cornerRadius="6dp"
        android:visibility="gone"
        android:paddingVertical="4dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintBottom_toTopOf="@id/takePicBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>