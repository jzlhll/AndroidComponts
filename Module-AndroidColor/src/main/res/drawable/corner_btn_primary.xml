<?xml version="1.0" encoding="utf-8"?>
<!-- 短而高亮的背景 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/color_disable_btn_bg_lt"/>
            <corners android:radius="@dimen/single_btn_corner_size"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/color_primary_press_lt"/>
            <corners android:radius="@dimen/single_btn_corner_size"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/color_primary_lt"/>
            <corners android:radius="@dimen/single_btn_corner_size"/>
        </shape>
    </item>
</selector>