<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- app 主题背景色 -->
    <color name="windowBackground_lt">#ffffff</color>
    <!-- app dialog的背景色 -->
    <color name="windowDialogBackground_lt">#ffffff</color>

    <!-- 背景色 ：文字图标，或者一片框框-->
    <color name="color_normal_block_lt">#f6f6f6</color>
    <!-- 背景色 -->
    <color name="color_secondary_lt">#f0f0f0</color>
    <color name="color_secondary_press_lt">#99f0f0f0</color>

    <!-- 品牌主题色 | 超链接文字颜色 -->
    <color name="colorPrimary_lt">#248067</color>
    <color name="colorPrimary_press_lt">#CC248067</color>

    <!-- 文字颜色 -->
    <color name="color_text_normal_lt">#212121</color>
    <color name="color_text_reverse_lt">#ffffff</color>

    <color name="color_text_desc_lt">#999999</color>
    <color name="color_hint_text_lt">#CCCCCC</color>

    <!-- button: main button色 -->
    <color name="color_main_btn_bg_lt">@color/colorPrimary_lt</color>
    <color name="color_main_btn_bg_press_lt">@color/colorPrimary_press_lt</color>
    <color name="color_main_btn_text_lt">@color/color_text_reverse_lt</color>

    <!-- button: secondary button色 -->
    <color name="color_second_btn_bg_lt">@color/color_secondary_lt</color>
    <color name="color_second_btn_bg_press_lt">@color/color_secondary_press_lt</color>
    <color name="color_second_btn_text_lt">@color/color_text_normal_lt</color>

    <!-- button: disable 比secondary更深一点-->
    <color name="color_disable_btn_bg_lt">#cccccc</color>
    <color name="color_disable_btn_text_lt">#444444</color>

    <!-- button: warning button色 -->
    <color name="color_warn_btn_bg_lt">#FA3D32</color>
    <color name="color_warn_btn_bg_press_lt">#FB645B</color>
    <color name="color_warn_btn_text_lt">@color/color_text_reverse_lt</color>

    <!-- edit: 相关一切颜色 -->
    <color name="color_edit_text_hint_lt">@color/color_hint_text_lt</color>

    <color name="color_edit_background_lt">#f6f6f6</color>
    <color name="color_edit_background_error_lt">#FFF0EF</color>

    <color name="color_edit_board_select_lt">@color/color_text_normal_lt</color>
    <color name="color_edit_board_normal_lt">@color/color_hint_text_lt</color>
    <color name="color_edit_board_error_lt">@color/color_warn_btn_bg_lt</color>

    <!-- tabLayout: 相关一切颜色。由于tabLayout有不同的样式。这里只提供一个常规的。 -->
    <color name="color_tab_text_no_select_lt">@color/color_hint_text_lt</color>
    <!-- <color name="color_tab_text_select_lt">#ffffff</color> 使用color_text_normal -->

    <!-- 分割线的颜色 -->
    <color name="colorForeground_lt">#f0f0f0</color>

    <!-- switch控件的颜色 -->
    <color name="color_switch_block_bg_lt">@color/color_secondary_lt</color>
    <color name="color_switch_block_sel_bg_lt">#ffffff</color>
    <color name="color_switch_block_text_lt">@color/color_text_normal_lt</color>
    <color name="color_switch_block_text_sel_lt">@color/color_text_normal_lt</color>

    <!-- toolBar相关 -->
    <color name="color_toolbar_text_lt">@color/color_text_normal_lt</color>
    <color name="color_toolbar_background_lt">@color/windowBackground_lt</color>
</resources>