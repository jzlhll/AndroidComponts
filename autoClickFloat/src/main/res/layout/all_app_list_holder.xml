<?xml version="1.0" encoding="utf-8"?>
<com.au.module_android.widget.BgBuildLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:backgroundNormal="#f0f0f0"
    app:cornerRadius="6dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <com.au.module_android.widget.CustomFontText
        android:id="@+id/text"
        android:paddingBottom="24dp"
        style="@style/StyleFontText"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</com.au.module_android.widget.BgBuildLinearLayout>