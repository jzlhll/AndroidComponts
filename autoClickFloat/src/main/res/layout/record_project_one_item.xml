<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    tools:layout_height="60dp"
    android:layout_height="match_parent">
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="48dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_height="48dp"/>

    <com.au.module_android.widget.BgBuildCustomFontText
        android:id="@+id/stepIndex"
        style="@style/StyleFontMText"
        app:layout_constraintStart_toEndOf="@id/checkbox"
        app:layout_constraintTop_toTopOf="parent"
        app:backgroundNormal="#eeeeee"
        android:gravity="center"
        tools:text="01"
        app:cornerRadius="120dp"
        android:layout_width="48dp"
        android:layout_height="48dp"/>

    <com.au.module_android.widget.CustomFontText
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/stepIndex"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/text"
        style="@style/StyleFontText"
        android:gravity="center_vertical"
        tools:text="this is fd adjfakdsjf jasdfja kdfjk ajdsfkajdsk fjaksdfjk ajsdfkj kadjfkaj kfjaskdfj kadsjfkajsdfk"
        android:layout_marginStart="6dp"
        android:minHeight="52dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <View
        app:layout_constraintTop_toBottomOf="@id/text"
        android:layout_marginTop="18dp"
        android:background="#cccccc"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>