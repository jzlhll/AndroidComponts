<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context="com.allan.androidlearning.androidui.AndroidUi1Fragment"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <com.au.module_android.widget.CustomFontText
            android:layout_marginTop="8dp"
            android:paddingHorizontal="@dimen/ui_padding_edge"
            style="@style/StyleFontBText"
            android:text="DarkMode and Locales Test"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginStart="8dp"
            android:layout_height="wrap_content">

            <com.au.module_android.widget.CustomFontText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:id="@+id/text"
                android:paddingTop="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                tools:text="@string/app_name">
            </com.au.module_android.widget.CustomFontText>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image1"
                    android:visibility="gone"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image2"
                    android:visibility="gone"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>

                <com.au.module_android.widget.CustomFontText
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:gravity="center_vertical"
                    android:id="@+id/testColor1"
                    android:layout_marginStart="8dp"
                    android:visibility="gone"
                    android:text="Color1"/>

                <com.au.module_android.widget.CustomFontText
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:gravity="center_vertical"
                    android:id="@+id/testColor2"
                    android:visibility="gone"
                    android:layout_marginStart="8dp"
                    android:text="Color2"/>
            </LinearLayout>
        </LinearLayout>

        <com.au.module_android.widget.CustomFontText
            android:layout_marginTop="8dp"
            android:paddingHorizontal="@dimen/ui_padding_edge"
            style="@style/StyleFontBText"
            android:text="Android Title"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.au.module_android.widget.CustomFontText
            android:paddingHorizontal="@dimen/ui_padding_edge"
            style="@style/StyleFontTitleDescText"
            android:text="This is a desc for android components."
            android:layout_marginTop="4dp"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.au.module_android.widget.FlowLayout
            android:layout_marginStart="@dimen/ui_padding_edge"
            android:layout_marginTop="8dp"
            app:flRowSpacing="8dp"
            app:flChildSpacing="36dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.au.module_android.widget.CustomFontText
                style="@style/StyleFontText"
                android:text="normal text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.au.module_android.widget.CustomFontTextlink
                style="@style/StyleFontMText"
                android:text="this is a link"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.au.module_android.widget.CustomImageFontText
                style="@style/StyleFontMText"
                app:drawableStartCompat="@drawable/ic_successful"
                app:drawableStartWidth="20dp"
                app:drawableStartHeight="20dp"
                app:drawableTextPadding="4dp"
                android:text="primary color Text"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.au.module_android.widget.CustomWrapEnFontText
                style="@style/StyleSmallText"
                android:text="small text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.au.module_android.widget.CustomImageFontText
                style="@style/StyleFontMText"
                app:drawableStartCompat="@drawable/ic_warning"
                app:drawableStartWidth="20dp"
                app:drawableStartHeight="20dp"
                app:drawableTextPadding="4dp"
                android:paddingVertical="4dp"
                android:paddingHorizontal="8dp"
                android:background="@drawable/corner_btn_secondary"
                android:text="image Text"
                android:textColor="@color/color_warn_btn_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.au.module_android.widget.BgBuildCustomFontText
                style="@style/StyleFontText"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                app:cornerRadius="4dp"
                app:backgroundNormal="@color/color_normal_block"
                android:text="background text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </com.au.module_android.widget.FlowLayout>


        <View
            android:layout_marginTop="32dp"
            android:background="@color/color_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <com.au.module_android.widget.CustomFontText
            android:layout_marginStart="@dimen/ui_padding_edge"
            style="@style/StyleFontSecondTitleText"
            android:layout_marginTop="18dp"
            android:text="switchs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="6dp"
            android:layout_marginStart="@dimen/ui_padding_edge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.au.module_android.widget.CustomFontText
                android:id="@+id/android_ui_switch_block_title1"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/StyleFontText"
                android:text="enable setting1"
                app:layout_constraintTop_toTopOf="@id/android_ui_switch_block1"
                app:layout_constraintBottom_toBottomOf="@id/android_ui_switch_block1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.au.module_androidui.widget.SwitchBlockButton
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/android_ui_switch_block1"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:layout_marginStart="12dp"
                android:text="switch block"
                app:layout_constraintStart_toEndOf="@id/android_ui_switch_block_title1"/>

            <com.au.module_android.widget.CustomFontText
                android:id="@+id/android_ui_switch_block_title2"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/StyleFontText"
                android:text="enable setting1"
                app:layout_constraintTop_toTopOf="@id/android_ui_switch_block2"
                app:layout_constraintBottom_toBottomOf="@id/android_ui_switch_block2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.au.module_androidui.widget.SwitchBlockButton
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/android_ui_switch_block1"
                android:id="@+id/android_ui_switch_block2"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:layout_marginStart="12dp"
                android:text="switch block"
                app:layout_constraintStart_toEndOf="@id/android_ui_switch_block_title2"/>

            <com.au.module_android.widget.CustomFontText
                android:id="@+id/android_ui_switch_layout_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/android_ui_switch_layout"
                app:layout_constraintBottom_toBottomOf="@id/android_ui_switch_layout"
                style="@style/StyleFontText"
                android:text="enable setting2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.au.module_androidui.widget.SwitchLayoutButton
                app:layout_constraintTop_toBottomOf="@id/android_ui_switch_block_title2"
                android:layout_marginTop="24dp"
                android:layout_marginStart="12dp"
                android:id="@+id/android_ui_switch_layout"
                app:layout_constraintStart_toEndOf="@id/android_ui_switch_layout_title"
                app:first_str="first"
                app:second_str="second"
                android:layout_width="wrap_content"
                android:layout_height="35dp"/>

            <com.au.module_android.widget.CustomFontText
                android:id="@+id/android_ui_switch_btn_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/android_ui_switch_btn_layout"
                app:layout_constraintBottom_toBottomOf="@id/android_ui_switch_btn_layout"
                style="@style/StyleFontText"
                android:text="enable setting3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.au.module_androidui.widget.SwitchButton
                app:layout_constraintTop_toBottomOf="@id/android_ui_switch_layout"
                android:layout_marginTop="24dp"
                android:layout_marginStart="12dp"
                android:id="@+id/android_ui_switch_btn_layout"
                app:layout_constraintStart_toEndOf="@id/android_ui_switch_layout_title"
                app:first_str="first on"
                app:second_str="second is long"
                android:layout_width="60dp"
                android:layout_height="32dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_marginTop="32dp"
            android:background="@color/color_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <com.au.module_android.widget.CustomFontText
            android:layout_marginStart="@dimen/ui_padding_edge"
            android:layout_marginTop="18dp"
            style="@style/StyleFontSecondTitleText"
            android:text="button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.au.module_android.widget.FlowLayout
            android:layout_marginStart="@dimen/ui_padding_edge"
            android:layout_marginTop="8dp"
            app:flRowSpacing="8dp"
            app:flChildSpacing="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.au.module_android.widget.CustomButton
                style="@style/StyleButtonPrimary"
                android:id="@+id/androidUi1Primary"
                android:layout_marginBottom="0dp"
                android:text="primary button"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.au.module_android.widget.CustomButton
                style="@style/StyleButtonPrimary"
                android:layout_marginBottom="0dp"
                android:enabled="false"
                android:text="primary disabled"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.au.module_android.widget.CustomButton
                style="@style/StyleButtonSecondary"
                android:layout_marginBottom="0dp"
                android:text="secondary\nbutton"
                android:lines="2"
                android:id="@+id/androidUi1Secondary"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.au.module_android.widget.CustomButton
                style="@style/StyleButtonWarn"
                android:layout_marginBottom="0dp"
                android:text="warning button"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.au.module_android.widget.CustomButton
                style="@style/StyleButtonFakeDisabled"
                android:layout_marginBottom="0dp"
                android:text="fake disable\nbutton"
                android:lines="2"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </com.au.module_android.widget.FlowLayout>

        <com.au.module_android.widget.BgBuildFrameLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/ui_padding_edge"
            android:layout_marginTop="12dp"
            app:cornerRadius="8dp"
            app:backgroundNormal="@color/windowDialogBackground"
            android:layout_height="65dp">
            <com.au.module_android.widget.CustomButton
                android:layout_gravity="center"
                style="@style/StyleButtonPrimary"
                android:layout_marginBottom="0dp"
                android:enabled="false"
                android:text="primary disabled on windowDialogBackground"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.au.module_android.widget.BgBuildFrameLayout>
        
        <View
            android:layout_marginTop="32dp"
            android:background="@color/color_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <com.au.module_android.widget.CustomFontText
            style="@style/StyleFontSecondTitleText"
            android:layout_marginStart="@dimen/ui_padding_edge"
            android:layout_marginTop="18dp"
            android:text="block background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.au.module_android.widget.FlowLayout
            android:layout_marginTop="8dp"
            android:layout_marginStart="@dimen/ui_padding_edge"
            app:flRowSpacing="8dp"
            app:flChildSpacing="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:background="@color/windowDialogBackground"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
                <TextView
                    android:text="background_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:background="@color/color_second_btn_bg_press"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
                <TextView
                    android:text="secondary_press"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:background="@color/colorPrimary"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
                <TextView
                    android:text="primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:background="@color/colorPrimary_press"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
                <TextView
                    android:text="primary_press"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </com.au.module_android.widget.FlowLayout>

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:background="@color/color_normal_block"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="normal_block" />
        </RelativeLayout>

        <RelativeLayout
            android:gravity="center_horizontal"
            android:background="@color/color_second_btn_bg"
            android:layout_width="200dp"
            android:layout_marginTop="8dp"
            android:layout_height="80dp"
            android:orientation="vertical">
            <TextView
                android:layout_centerInParent="true"
                android:text="color secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>