<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingHorizontal="@dimen/ui_padding_edge"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.au.module_android.widget.CustomFontText
            android:id="@+id/mediaPlayTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MediaPlayer"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mediaPlayerStartBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="play" />

            <Button
                android:id="@+id/mediaPlayerStopBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="stop" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mediaPlayerPauseBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pause" />

            <Button
                android:id="@+id/mediaPlayerResumeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="resume" />
        </LinearLayout>
        <SeekBar
            android:id="@+id/mediaPlayerSeekBar"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:visibility="visible"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/mediaPlayerCurrentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="AudioTrack" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/audioTrackTestGetPcmInfoBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试获取PcmInfo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/audioTrackPlayStreamBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="play(stream)" />

                <Button
                    android:id="@+id/audioTrackPlayStaticBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="play(static)" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/audioTrackStopBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="stop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/audioTrackPauseBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pause"/>

                <Button
                    android:id="@+id/audioTrackResumeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="resume"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="SoundPool" />

        <Button
            android:id="@+id/soundPoolBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="play" />
    </LinearLayout>
</ScrollView>