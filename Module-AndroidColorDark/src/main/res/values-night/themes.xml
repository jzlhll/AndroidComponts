<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="CustomModuleTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- material的颜色值 overlay 实在太多，只要部分。colorPrimary colorAccent 控件颜色； colorSecondaryContainer 修改进度条的背景色；-->
        <item name="colorPrimary">@color/colorPrimary_dk</item>
        <item name="colorPrimaryDark">@color/colorPrimary_dk</item>
        <item name="colorAccent">@color/colorPrimary_dk</item>
        <item name="android:textColor">@color/color_text_normal_dk</item>
        <item name="colorSecondaryContainer">@color/color_secondary_dk</item>
        <item name="android:colorControlNormal">@color/color_text_normal_dk</item>
        <item name="android:textColorPrimary">@color/color_text_normal_dk</item>
        <item name="colorPrimaryVariant">@color/color_text_normal_dk</item>

        <!-- 自定义菜单项文字颜色 -->
        <item name="android:actionMenuTextColor">@color/color_text_normal_dk</item>
        <!-- 重要的4板斧 设置statusBar和navigationBar的颜色-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowBackground">@color/windowBackground_dk</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">
            @android:color/transparent
        </item>
    </style>

    <style name="CustomModuleThemeSplash" parent="CustomModuleTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="CustomModuleThemePush" parent="CustomModuleTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>
</resources>